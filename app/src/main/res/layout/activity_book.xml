<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="Book Image"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="50dp"
        app:srcCompat="@drawable/manavkaul_books" />

    <TextView
        android:id="@+id/BookTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="20dp"
        android:text="A bird of my Window Sill"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/BookTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="20dp"
        android:text="Rooh - Kashmir"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/BookTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="20dp"
        android:text="Night Jasmine"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/BookTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="20dp"
        android:text="Theek Tumhare Peeche"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
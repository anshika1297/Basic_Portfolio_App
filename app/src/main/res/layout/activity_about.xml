<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookActivity"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="Book Image"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="50dp"
        app:srcCompat="@drawable/manav_photo" />

    <TextView
        android:id="@+id/BookTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="20dp"
        android:text="Manav Kaul (born 19 December 1976) is an Indian theatre director, playwright, author, actor and filmmaker. He was nominated for the Filmfare Award for Best Supporting Actor for his role in the films Tumhari Sulu (2017) and Saina (2021)."
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>